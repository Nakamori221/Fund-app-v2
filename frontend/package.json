{
  "name": "fund-ic-automation-frontend",
  "version": "1.0.0",
  "type": "module",
  "description": "Fund IC Automation System - Frontend (React 18.2 + TypeScript + Vite)",
  "author": "Fund Team",
  "license": "Private",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "cypress open",
    "test:e2e:ci": "cypress run",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "generate:api-types": "openapi-typescript http://localhost:8000/openapi.json -o src/types/api.generated.ts"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "@tanstack/react-query": "^5.28.0",
    "zustand": "^4.4.1",
    "typescript": "^5.3.3",
    "socket.io-client": "^4.7.2",
    "@sentry/react": "^7.98.0",
    "axios": "^1.6.5",
    "@headlessui/react": "^1.7.17"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/node": "^20.10.6",
    "@vitejs/plugin-react": "^4.2.1",
    "vite": "^5.0.8",
    "vitest": "^1.1.0",
    "@vitest/ui": "^1.1.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/jest-dom": "^6.1.5",
    "cypress": "^13.6.2",
    "@cypress/react": "^0.1.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "typescript-eslint": "^6.16.0",
    "prettier": "^3.1.1",
    "openapi-typescript": "^6.7.4",
    "msw": "^2.0.11"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}

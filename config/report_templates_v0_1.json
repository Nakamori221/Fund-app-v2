  "updated_at": "2025-10-28",
  "templates": [
    {
      "template_id": "ic_default",
      "name": "IC資料テンプレート v0.1",
      "description": "投資委員会向けフル情報版。CONF/INT起点の機微情報を含む。",
      "masking_policy_id": "lp_masking_policy_v0_1",
      "sections": [
        {
          "section_id": "exec_summary",
          "order": 10,
          "title": "投資推奨サマリー",
          "purpose": "投資判断の結論と主要根拠を最初に提示する。",
          "required": true,
          "visible": { "ic": true, "lp": true },
          "render_type": "narrative",
          "data_requirements": {
            "required": [
              "thesis.statement",
              "deal.investment_amount",
              "deal.ownership",
              "deal.valuation_pre"
            ],
            "optional": [
              "thesis.reason_1",
              "thesis.reason_2",
              "thesis.reason_3",
              "thesis.key_metrics",
              "deal.investment_amount_range",
              "deal.ownership_range",
              "deal.valuation_pre_range"
            ]
          },
          "pending_policy": {
            "type": "inline_note",
            "text": "情報取得中：{field_id}"
          },
          "footnote_policy": {
            "include_source_tag": true,
            "include_as_of": true,
            "include_evidence": true
          }
        },
        {
          "section_id": "company_overview",
          "order": 20,
          "title": "会社概要と課題・解決策",
          "purpose": "顧客課題・ソリューション・ビジネスモデルを整理する。",
          "required": true,
          "visible": { "ic": true, "lp": true },
          "render_type": "narrative",
          "data_requirements": {
            "required": [
              "business.problem_summary",
              "business.solution_summary",
              "business.model_summary",
              "product.overview"
            ],
            "optional": [
              "product.roadmap_key"
            ]
          }
        },
        {
          "section_id": "market_analysis",
          "order": 30,
          "title": "市場規模とWhy Now",
